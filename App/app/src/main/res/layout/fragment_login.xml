<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoginFragment"
    android:background="@drawable/login">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="LOGIN FRAGMENT" />

    <Button
        android:id="@+id/btnLoginToSignup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btnLoginToHome"
        app:layout_constraintRight_toLeftOf="@id/btnLoginToHome"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="SIGN UP"/>

    <Button
        android:id="@+id/btnLoginToHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnLoginToSignup"
        android:layout_marginBottom="48dp"
        android:text="LOG IN / HOME"/>

</androidx.constraintlayout.widget.ConstraintLayout>