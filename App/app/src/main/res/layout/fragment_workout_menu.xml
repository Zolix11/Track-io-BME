<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.WorkoutMenuFragment"
    android:background="@drawable/workout_menu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="WORKOUT MENU FRAGMENT" />

    <Button
        android:id="@+id/btnWorkoutToDuring"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btnWorkoutToProfile"
        app:layout_constraintRight_toLeftOf="@id/btnWorkoutToProfile"
        app:layout_constraintLeft_toRightOf="@id/btnWorkoutToHome"
        android:text="DURING WORKOUT"/>

    <Button
        android:id="@+id/btnWorkoutToProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btnWorkoutToHome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnWorkoutToDuring"
        android:text="PROFILE"/>

    <Button
        android:id="@+id/btnWorkoutToHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnWorkoutToDuring"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="64dp"
        android:text="HOME"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="?android:colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>